{
	"$id": "api/schemas/common/User.schema.json",
	"definitions": {
		"name": {
			"type": "string",
			"pattern": "^[A-Za-z0-9_-]+$"
		},
		"group": {
			"type": "string",
			"pattern": "^[A-Za-z0-9_-]+$"
		},
		"pass": {
			"type": "string",
			"minLength": 1
		},
		"passwordless": {
			"type": "boolean"
		}
	},

	"type": "object",
	"properties": {
		"groups": {
			"type": "array",
			"items": { "$ref": "#/definitions/group" }
		},
		"quota": { "$ref": "file://api/schemas/common/Quota.schema.json" },
		"sessions": {
			"type": "array",
			"items": { "$ref": "file://api/schemas/common/Session.schema.json" }
		},
		"user": { "$ref": "#/definitions/name" },
		"passwordless": { "$ref": "#/definitions/passwordless" }
	},
	"required": ["groups", "quota", "sessions", "user"],
	"additionalProperties": false
}
